<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnClear"
            style="@style/buttonStyle"
            android:text="C" />
        <Button
            android:id="@+id/btnBracket"
            style="@style/buttonStyle"
            android:text="()" />
        <Button
            android:id="@+id/btnPercent"
            style="@style/buttonStyle"
            android:text="%" />
        <Button
            android:id="@+id/btnDivision"
            style="@style/buttonStyle"
            android:text="/" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            style="@style/buttonStyle"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            style="@style/buttonStyle"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            style="@style/buttonStyle"
            android:text="9" />
        <Button
            android:id="@+id/btnMultiply"
            style="@style/buttonStyle"
            android:text="x" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            style="@style/buttonStyle"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            style="@style/buttonStyle"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            style="@style/buttonStyle"
            android:text="6" />
        <Button
            android:id="@+id/btnMinus"
            style="@style/buttonStyle"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn3"
            style="@style/buttonStyle"
            android:text="3" />
        <Button
            android:id="@+id/btn2"
            style="@style/buttonStyle"
            android:text="2" />
        <Button
            android:id="@+id/btn1"
            style="@style/buttonStyle"
            android:text="1" />
        <Button
            android:id="@+id/btnPlus"
            style="@style/buttonStyle"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn0"
            style="@style/buttonStyle"
            android:text="0" />
        <Button
            android:id="@+id/btnDot"
            style="@style/buttonStyle"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            style="@style/buttonStyle"
            android:text="=" />

    </LinearLayout>

</LinearLayout>